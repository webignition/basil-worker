{
  "variables": {
    "digitalocean_api_token": null,
    "snapshot_name": null
  },
  "sensitive-variables": ["digitalocean_api_token"],
  "builders": [
    {
      "type": "digitalocean",
      "ssh_username": "root",
      "api_token": "{{ user `digitalocean_api_token` }}",
      "image": "ubuntu-20-04-x64",
      "region": "lon1",
      "size": "s-1vcpu-1gb",
      "snapshot_name": "basil-worker-{{ user `snapshot_name` }}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "docker-compose.yml",
      "destination": "~/docker-compose.yml"
    },
    {
      "type": "file",
      "source": ".docker-compose.env",
      "destination": "~/.docker-compose.env"
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p ~/nginx"
      ]
    },
    {
      "type": "file",
      "source": "nginx/Dockerfile",
      "destination": "~/nginx/Dockerfile"
    },
    {
      "type": "file",
      "source": "nginx/site.conf",
      "destination": "~/nginx/site.conf"
    },
    {
      "type": "shell",
      "scripts": [
        "./provision.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p ~/self-test"
      ]
    },
    {
      "type": "file",
      "source": "self-test/fixtures",
      "destination": "~/self-test/fixtures"
    },
    {
      "type": "shell",
      "scripts": [
        "./self-test/docker-compose-services.sh",
        "./self-test/delegator.sh chrome",
        "./self-test/delegator.sh firefox"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p ~/self-test/app"
      ]
    },
    {
      "type": "file",
      "source": "self-test/app/composer.json",
      "destination": "~/self-test/app/composer.json"
    },
    {
      "type": "file",
      "source": "self-test/app/src",
      "destination": "~/self-test/app/src"
    },
    {
      "type": "file",
      "source": "self-test/services.yml",
      "destination": "~/self-test/services.yml"
    },
    {
      "type": "shell",
      "scripts": [
        "./self-test/app.sh"
      ]
    }
  ]
}
